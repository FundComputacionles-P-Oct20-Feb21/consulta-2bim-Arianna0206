	Escribir "Cálculo mental de dos números: ";
	Escribir "Ingrese el primer valor";
	Leer valor1;
	Escribir "Ingrese el segundo valor";
	Leer valor2;
	Escribir "Ingrese el tercer valor";
	Leer valor3;
	Escribir "Piensa: La operación valor1*valor2*valor3/valor2";
	Leer Piensa;
